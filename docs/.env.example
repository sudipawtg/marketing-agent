# Marketing Agent - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================================================
# LLM Provider Configuration
# ============================================================================

# OpenAI
OPENAI_API_KEY=sk-your-key-here
OPENAI_ORG_ID=org-your-org-id  # Optional

# Anthropic (alternative to OpenAI)
# ANTHROPIC_API_KEY=your-anthropic-key-here

# ============================================================================
# LangSmith Configuration (for tracing and evaluation)
# ============================================================================

LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your-langsmith-api-key
LANGCHAIN_PROJECT=marketing-agent-dev  # Change for staging/prod
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# ============================================================================
# Database Configuration
# ============================================================================

# PostgreSQL
DATABASE_URL=postgresql://marketing_agent:your-secure-password@localhost:5432/marketing_agent
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=  # Leave empty for local dev

# ============================================================================
# Application Configuration
# ============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true  # Hot reload for development
API_WORKERS=1    # Increase for production

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# ============================================================================
# Ad Platform Integrations
# ============================================================================

# Google Ads
GOOGLE_ADS_DEVELOPER_TOKEN=your-developer-token
GOOGLE_ADS_CLIENT_ID=your-client-id
GOOGLE_ADS_CLIENT_SECRET=your-client-secret
GOOGLE_ADS_REFRESH_TOKEN=your-refresh-token
GOOGLE_ADS_CUSTOMER_ID=your-customer-id

# Meta Ads (Facebook/Instagram)
META_ADS_APP_ID=your-app-id
META_ADS_APP_SECRET=your-app-secret
META_ADS_ACCESS_TOKEN=your-long-lived-access-token
META_ADS_ACCOUNT_ID=act_your-account-id

# LinkedIn Ads (optional)
# LINKEDIN_ADS_CLIENT_ID=your-client-id
# LINKEDIN_ADS_CLIENT_SECRET=your-client-secret
# LINKEDIN_ADS_ACCESS_TOKEN=your-access-token

# ============================================================================
# Analytics Integrations
# ============================================================================

# Google Analytics 4
GA4_PROPERTY_ID=your-ga4-property-id
GA4_CREDENTIALS_PATH=./secrets/ga4-service-account.json

# Mixpanel (optional)
# MIXPANEL_PROJECT_TOKEN=your-mixpanel-token
# MIXPANEL_API_SECRET=your-api-secret

# ============================================================================
# Competitor Intelligence
# ============================================================================

# SEMrush
SEMRUSH_API_KEY=your-semrush-api-key

# SpyFu (optional)
# SPYFU_API_KEY=your-spyfu-api-key

# ============================================================================
# Monitoring & Observability
# ============================================================================

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0  # 100% in dev, lower in prod

# Prometheus
PROMETHEUS_PORT=9090

# ============================================================================
# Notification Services
# ============================================================================

# Email (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=notifications@yourcompany.com
SENDGRID_FROM_NAME=Marketing Agent

# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#marketing-agent

# ============================================================================
# Celery (Background Tasks)
# ============================================================================

CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ============================================================================
# Feature Flags
# ============================================================================

# Enable/disable features for testing
ENABLE_COMPETITOR_ANALYSIS=true
ENABLE_AUTOMATED_EXECUTION=false  # Keep false until graduated autonomy
ENABLE_COST_OPTIMIZATION=true
ENABLE_BATCH_PROCESSING=false

# ============================================================================
# Cost Management
# ============================================================================

# Budget limits (USD)
DAILY_LLM_BUDGET=100.00
MONTHLY_LLM_BUDGET=2000.00

# Alert thresholds
COST_ALERT_THRESHOLD=80.00  # Alert when approaching budget

# ============================================================================
# Security
# ============================================================================

# JWT Configuration
SECRET_KEY=your-very-secure-random-secret-key-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Key for external integrations
API_KEY=your-secure-api-key-for-webhooks

# ============================================================================
# Development Tools
# ============================================================================

# Debug mode (NEVER enable in production!)
DEBUG=true

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Mock external APIs (for testing without real API calls)
MOCK_AD_PLATFORMS=false
MOCK_LLM_CALLS=false

# ============================================================================
# Promptfoo (Evaluation)
# ============================================================================

PROMPTFOO_CACHE_PATH=.promptfoo/cache

# ============================================================================
# Docker Compose Overrides
# ============================================================================

# PostgreSQL (for docker-compose)
POSTGRES_USER=marketing_agent
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=marketing_agent

# Redis (for docker-compose)
# REDIS_PASSWORD=your-redis-password

# ============================================================================
# Notes
# ============================================================================

# 1. Generate a secure SECRET_KEY:
#    python -c "import secrets; print(secrets.token_urlsafe(32))"
#
# 2. Get LangSmith API key:
#    https://smith.langchain.com/
#
# 3. Ad platform setup guides:
#    - Google Ads: https://developers.google.com/google-ads/api/docs/start
#    - Meta Ads: https://developers.facebook.com/docs/marketing-api/
#
# 4. For production, use secrets management:
#    - AWS Secrets Manager
#    - HashiCorp Vault
#    - Kubernetes Secrets
